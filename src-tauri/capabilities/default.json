{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            "-v",
            "quiet",
            "-print_format",
            "json",
            "-show_format"
          ],
          "name": "binaries/ffmpeg/bin/ffprobe",
          "sidecar": true
        }
      ]
    }
  ]
}