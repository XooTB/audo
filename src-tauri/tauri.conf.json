{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "audo",
  "version": "0.1.0",
  "identifier": "com.audo.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "audo",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; media-src 'self' asset: http://asset.localhost asset://localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**/*",
          "/home/**/*",
          "C:/Users/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/ffmpeg/bin/ffmpeg",
      "binaries/ffmpeg/bin/ffprobe"
    ]
  }
}